<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud">

    <TextView
        android:id="@+id/title_analytics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim20"
        android:layout_marginTop="@dimen/dim20"
        android:fontFamily="@font/bold"
        android:text="Аналитика"
        android:textColor="@color/primaryDark"
        android:textSize="@dimen/text24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/bt_setting"
        android:layout_width="@dimen/dim40"
        android:layout_height="@dimen/dim40"
        android:layout_marginEnd="@dimen/dim20"
        android:background="@drawable/et_shape"
        android:drawableStart="@drawable/analytics_icon_setting"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dim8"
        android:paddingVertical="@dimen/dim8"
        app:layout_constraintBottom_toBottomOf="@id/title_analytics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_analytics" />

    <android.widget.Button
        android:id="@+id/bt_filter"
        android:layout_width="@dimen/dim40"
        android:layout_height="@dimen/dim40"
        android:layout_marginEnd="48dp"
        android:background="@drawable/et_shape"
        android:drawableStart="@drawable/analytics_icon_filter"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dim8"
        android:paddingVertical="@dimen/dim8"
        app:layout_constraintBottom_toBottomOf="@id/bt_setting"
        app:layout_constraintEnd_toEndOf="@id/bt_setting"
        app:layout_constraintTop_toTopOf="@id/bt_setting" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim40"
        android:layout_marginHorizontal="@dimen/dim20"
        android:layout_marginTop="@dimen/dim12"
        android:background="@drawable/analytics_tab_selector"
        app:tabIndicatorColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/accent"
        app:tabTextColor="@color/secondary"
        app:tabIndicator="@drawable/analytics_tab_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_analytics" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pieChart"/>

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dim20"
        android:layout_marginTop="@dimen/dim20"
        android:fontFamily="@font/medium"
        android:textColor="@color/secondary"
        android:textSize="@dimen/text16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        tool:text="Март 2025" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="210dp"
        android:layout_height="201dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_title"/>
    <LinearLayout
        android:id="@+id/indicatorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/pieChart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dim16"/>
    <TextView
        android:id="@+id/choosing_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim20"
        android:layout_marginTop="@dimen/dim24"
        android:fontFamily="@font/medium"
        android:text="Категории расходов"
        android:textColor="@color/secondary"
        android:textSize="@dimen/text16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/indicatorLayout" />

    <android.widget.Button
        android:id="@+id/bt_choosing"
        android:layout_width="@dimen/dim40"
        android:layout_height="@dimen/dim40"
        android:layout_marginEnd="@dimen/dim20"
        android:background="@drawable/et_shape"
        android:drawableStart="@drawable/analytics_icon_choosing"
        android:gravity="center"
        android:paddingHorizontal="13dp"
        android:paddingVertical="@dimen/dim12"
        app:layout_constraintBottom_toTopOf="@id/choosing_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/choosing_category" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_analytics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dim20"
        android:layout_marginTop="@dimen/dim16"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choosing_category"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/category_item"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/empty_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choosing_category"
        android:layout_marginTop="108dp"
        android:text="В этом месяце нет расходов"
        android:textSize="@dimen/text14"
        android:fontFamily="@font/regular"
        android:textColor="@color/secondary"
        />
    <android.widget.Button
        android:id="@+id/fab"
        android:layout_width="@dimen/dim60"
        android:layout_height="@dimen/dim60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/analytics_floating_b_shape"
        android:text="+"
        android:textSize="@dimen/dim24"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>