<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnSecondary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_analytics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim20"
            android:layout_marginTop="@dimen/dim20"
            android:fontFamily="@font/bold"
            android:text="Аналитика"
            android:textSize="@dimen/text24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/bt_setting"
            android:layout_width="@dimen/dim40"
            android:layout_height="@dimen/dim40"
            android:layout_marginEnd="@dimen/dim20"
            android:background="@drawable/et_shape"
            android:drawableStart="@drawable/analytics_icon_setting"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dim8"
            android:paddingVertical="@dimen/dim8"
            app:layout_constraintBottom_toBottomOf="@id/title_analytics"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title_analytics" />

        <android.widget.Button
            android:id="@+id/bt_filter"
            android:layout_width="@dimen/dim40"
            android:layout_height="@dimen/dim40"
            android:layout_marginEnd="48dp"
            android:background="@drawable/et_shape"
            android:drawableStart="@drawable/analytics_icon_filter"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dim8"
            android:paddingVertical="@dimen/dim8"
            app:layout_constraintBottom_toBottomOf="@id/bt_setting"
            app:layout_constraintEnd_toEndOf="@id/bt_setting"
            app:layout_constraintTop_toTopOf="@id/bt_setting" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim40"
            android:layout_marginHorizontal="@dimen/dim20"
            android:layout_marginTop="@dimen/dim12"
            android:background="@drawable/analytics_tab_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_analytics"
            app:tabIndicator="@drawable/analytics_tab_indicator"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabSelectedTextColor="@color/accent"
            app:tabTextColor="@color/secondary" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/pieChart"
            app:layout_constraintTop_toBottomOf="parent" />

        <TextView
            android:id="@+id/tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dim20"
            android:layout_marginTop="@dimen/dim20"
            android:fontFamily="@font/medium"
            android:textColor="@color/secondary"
            android:textSize="@dimen/text16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"
            tool:text="Март 2025" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="210dp"
            android:layout_height="201dp"
            android:background="?attr/colorOnSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab_title" />

        <LinearLayout
            android:id="@+id/indicatorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim16"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pieChart" />

        <TextView
            android:id="@+id/choosing_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim20"
            android:layout_marginTop="@dimen/dim24"
            android:fontFamily="@font/medium"
            android:text="Категории расходов"
            android:textColor="@color/secondary"
            android:textSize="@dimen/text16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/indicatorLayout" />

        <android.widget.Button
            android:id="@+id/bt_choosing"
            android:layout_width="@dimen/dim40"
            android:layout_height="@dimen/dim40"
            android:layout_marginEnd="@dimen/dim20"
            android:background="@drawable/et_shape"
            android:drawableStart="@drawable/analytics_icon_choosing"
            android:gravity="center"
            android:paddingHorizontal="13dp"
            android:paddingVertical="@dimen/dim12"
            app:layout_constraintBottom_toTopOf="@id/choosing_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/choosing_category" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_analytics"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/dim20"
            android:layout_marginTop="@dimen/dim16"
            android:orientation="vertical"
            android:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/choosing_category"
            tools:listitem="@layout/category_item" />

        <TextView
            android:id="@+id/empty_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:fontFamily="@font/regular"
            android:text="В этом месяце нет расходов"
            android:textColor="@color/secondary"
            android:textSize="@dimen/text14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/choosing_category" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim20"
            android:layout_marginBottom="@dimen/dim22"
            app:backgroundTint="@color/accent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearance="@drawable/b_floating_shape"
            app:srcCompat="@drawable/ic_add"
            app:tint="@color/backgroud" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_expense_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorOnSecondary"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="@string/add_expense"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/close_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="24dp"
                android:src="@drawable/icon_close"
                app:tint="?attr/colorPrimary"/>
        </Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/amount_input_layout"
                    style="@style/MyEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dim20"
                    android:layout_marginTop="@dimen/dim20"
                    android:gravity="center_vertical"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    app:errorTextColor="@color/error"
                    app:hintTextColor="@color/color_et"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/amount_edit_text"
                        style="@style/MyEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:background="@drawable/et_shape"
                        android:fontFamily="@font/medium"
                        android:gravity="center_vertical"
                        android:hint="@string/sum"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/primaryDark"
                        android:textColorHint="@color/secondary"
                        android:textSize="@dimen/text14" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim20"
                    android:layout_marginTop="@dimen/dim16"
                    android:layout_marginEnd="@dimen/dim20"
                    app:layout_constraintBottom_toTopOf="@id/date_edit_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/amount_input_layout" />

                <EditText
                    android:id="@+id/date_edit_text"
                    style="@style/MyEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginHorizontal="@dimen/dim16"
                    android:layout_marginTop="@dimen/dim20"
                    android:enabled="false"
                    android:fontFamily="@font/medium"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/dim16"
                    android:singleLine="true"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    app:layout_constraintTop_toBottomOf="@id/view_pager" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dim20"
                    android:src="@drawable/icon_calendar"
                    app:layout_constraintBottom_toBottomOf="@id/date_edit_text"
                    app:layout_constraintEnd_toEndOf="@id/date_edit_text"
                    app:layout_constraintTop_toTopOf="@id/date_edit_text"
                    app:tint="@color/accent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/comment_input_layout"
                    style="@style/MyEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dim20"
                    android:layout_marginTop="@dimen/dim20"
                    android:gravity="center_vertical"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    app:errorTextColor="@color/error"
                    app:hintTextColor="@color/color_et"
                    app:layout_constraintTop_toBottomOf="@id/date_edit_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/comment_edit_text"
                        style="@style/MyEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:background="@drawable/et_shape"
                        android:fontFamily="@font/medium"
                        android:gravity="center_vertical"
                        android:hint="@string/comment_in_edit_text"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/primaryDark"
                        android:textColorHint="@color/secondary"
                        android:textSize="@dimen/text14" />

                </com.google.android.material.textfield.TextInputLayout>

                <android.widget.Button
                    android:id="@+id/bt_apply"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dim20"
                    android:layout_marginTop="@dimen/dim24"
                    android:layout_marginBottom="@dimen/dim4"
                    android:background="@drawable/b_shape"
                    android:enabled="false"
                    android:fontFamily="@font/medium"
                    android:text="@string/add"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>