<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/authorizationFragment">

    <fragment
        android:id="@+id/authorizationFragment"
        android:name="com.example.tracker.authorization.ui.AuthorizationFragment"
        android:label="AuthorizationFragment" >
        <action
            android:id="@+id/action_authorizationFragment_to_recoveryFragment"
            app:destination="@id/recoveryFragment" />
        <action
            android:id="@+id/action_authorizationFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/recoveryFragment"
        android:name="com.example.tracker.password_recovery.ui.RecoveryFragment"
        android:label="RecoveryFragment" />
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.tracker.registration.ui.RegistrationFragment"
        android:label="RegistrationFragment" />
</navigation>